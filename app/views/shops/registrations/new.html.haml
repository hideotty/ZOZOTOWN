#account-page.account-page
  .account-page-wrapper
    %h2.account-page_title 新規ショップ登録
    / = render "devise/shared/links"
    .account-page__inner--wrapper
      .account-page__inner--wrapper--input
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          %p Shop info
          %hr
          .input_field_wrapper
            .name_field_label
              = f.label 'ショップ名'
              %span.strong_label 必須
            .name_field_shop
              = f.text_field :name, placeholder: "ショップ名", class: "input_name_shop"
          .input_field_wrapper
            .name_field_label
              = f.label 'カナ'
              %span.strong_label 必須
            .name_field_kana_shop
              = f.text_field :kana_name, placeholder: "ショップ メイ", class: "input_name_kana_shop"
          .input_field_wrapper
            .email_field_label
              = f.label '店舗メールアドレス'
              %span.strong_label 必須
            .email_field
              = f.text_field :email, placeholder: "info@sample.jp", class: "input_email"
          %p Address
          %hr
          .input_field_wrapper
            .postal_field_label
              = f.label '郵便番号'
              %span.strong_label 必須
            .postal_field_code
              = f.text_field :postal_code, placeholder: "郵便番号", class: "input_postal_code"
          .input_field_wrapper
            .address_field_label
              = f.label '住所'
              %span.strong_label 必須
            .address_field
              = f.text_field :address, placeholder: "東京都〇〇区１丁目２−３ １F",class: "input_address"
          .input_field_wrapper
            .phone_field_label
              = f.label '電話番号'
              %span.strong_label 必須
            .phone_field
              = f.phone_field :phone_number, placeholder: "000-0000-0000", class: "input_phone_number"
          .input_field_wrapper
            .representative_field_label
              = f.label '代表者名'
              %span.strong_label 必須
            .representative_field
              = f.text_field :representative, placeholder: "田中 太郎", class: "input_representative"
          %p Password
          %hr
          .input_field_wrapper
            .password_field_label
              = f.label 'パスワード'
              %span.strong_label 必須
            .password_field
              = f.password_field :password, autocomplete: "off", placeholder: "英 数 字（小文字）8 文 字 以 上", class: "input_password"
          .input_field_wrapper
            .password_field_label
              = f.label 'パスワード確認'
            .password_field
              = f.password_field :password_confirmation, autocomplete: "off", placeholder: "確認のため、もう一度パスワードを入力してください", class: "input_password"
          = f.submit "上 記 の 内 容 で 登 録", class: 'registration-btn'
