%body
  .contents.wrapper
    .main_contents
      .left__contents
        = render partial: "category-list"
      .center__contents
        %ul#slider
          %li.top-image
            = image_tag "galantis.jpg", id: "top_image"
          / %li
          /   = image_tag "img02.jpg"
          / %li
          /   = image_tag "img03.jpg"
          / %li
          /   = image_tag "img04.jpg"
          / %li
          /   = image_tag "img05.jpg"
          / %li
          /   = image_tag "img06.jpg"
        %ul#slider-nav
          / %li
          /   = image_tag "image01.jpg"
          / %li
          /   = image_tag "image01.jpg"
        .center__contents_wrapper
          .center__contents_campain
            %h5.center__contents_campain-title 最近追加された商品
            %hr.center__contents_campain-line
            .center__contents_campain__top
              - @recentproducts.each do |product|
                .center__contents_campain__top-product
                  = link_to product_path(product.id) do
                    = image_tag "#{product.images.main_image[0].image.url}" if product.images.main_image.present?
                    =image_tag "no-image.jpg" if not product.images.main_image.present?
                  %p.contents_price
                    #{product.price}

          .center__contents_campain
            %h5.center__contents_campain-title Recommend Products
            %hr.center__contents_campain-line
            .center__contents_campain__top
              - @allproducts.each do |product|
                .center__contents_campain__top-product
                  = link_to product_path(product.id) do
                    = image_tag "#{product.images.main_image[0].image.url}" if product.images.main_image.present?
                    =image_tag "no-image.jpg" if not product.images.main_image.present?
                  %p.contents_price
                    #{product.price}
              / .center__contents_campain__top-product
              /   = image_tag "image08.jpg"
              / .center__contents_campain__top-product
              /   = image_tag "image09.jpg"
              / .center__contents_campain__top-product
              /   = image_tag "image10.jpg"
              / .center__contents_campain__top-product
              /   = image_tag "image11.jpg"
              / .center__contents_campain__top-product
              /   = image_tag "image12.jpg"
              / .center__contents_campain__top-product
              /   = image_tag "image13.jpg"
      .right__contents
        .right__contents_sale
          = image_tag 'cake.jpg', class: "right-contents-top-pop"
          .roto-mask
            .roto-caption 非売品
        .right__contents_shop-news-title shop news
        .right__contents_shop-news-list
          = image_tag 'galantisT.jpg', class: "right-contents-shop-pop"
          .right__contents_shop-news-detail
            %p.shop-news-detail_title test words
            %p.shop-news-detail_description super sale!!!!!!!
        = render partial: "shop-list"
  .footer
